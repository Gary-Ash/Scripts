#!/usr/bin/env zsh
#*****************************************************************************************
# stay_awake
#
# This command will cause the computer to stay awake until cancel_awake is called
#
# Author   :  Gary Ash <gary.ash@icloud.com>
# Created  :  17-May-2025  9:57pm
# Modified :
#
# Copyright Â© 2024 By Gary Ash All rights reserved.
#*****************************************************************************************
stay_awake() {
	caffeinate -dis &>/dev/null &
	export CAFFEINATE=$!
}
stay_awake
